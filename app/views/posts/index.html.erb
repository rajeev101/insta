<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>User</th>
      <th>Allow comments</th>
      <th>Show likes counter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.caption %></td>
        <td><%= post.longitude %></td>
        <td><%= post.latitude %></td>
        <td><%= post.user_id %></td>
        <td><%= post.allow_comments %></td>
        <td><%= post.show_likes_counter %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
