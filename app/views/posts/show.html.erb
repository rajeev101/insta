<div id="<%= dom_id @post %>">
  <div class="card" style="width: 25rem;">
    <div class="card-header bg-white">
      <% if @post.user.profile_pic.attached? %>
        <%= image_tag @post.user.profile_pic,  class: "img-thumbnail rounded-circle", style: "width: 10%" %>
      <% else %>
        <%= image_tag 'pp.png',  class: "img-thumbnail rounded-circle", style: "width: 10%" %>
      <% end %>
      <span class="fw-bold mx-2"><%= @post.user.username %> </span>
    </div>
    <%= image_tag @post.images.last, class: "card-img-top" %>
    <div class="card-body">
       <p class="card-text"> <%= @post.caption %></p>
    </div>
    <div class="card-footer">
      Featured
    </div>
  </div>
</div>

 